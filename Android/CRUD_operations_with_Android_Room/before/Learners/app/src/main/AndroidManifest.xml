<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="magosla.tutorial.android.learners">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="magosla.tutorial.android.learners.ui.StudentEditActivity" android:label="@string/add_student" />
        <activity android:name="magosla.tutorial.android.learners.ui.StudentActivity" android:label="@string/student"/>
        <activity android:name="magosla.tutorial.android.learners.ui.StudentsActivity" android:label="@string/students"/>
        <activity android:name="magosla.tutorial.android.learners.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>